{
  "manifest_version": 3,
  "name": "Send to GLPI",
  "version": "1.1",
  "description": "Adiciona um botão para enviar conversas do Umbler Talk e chamados do SII para o GLPI e aprimora a coleta de dados com configurações.",
  "author": "Erionaldo Freitas",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://app-utalk.umbler.com/*",
    "https://chamados.pztech.net.br/*"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
 "matches": ["https://app-utalk.umbler.com/*", "https://sii.inovadora.com.br/chamadas/mostrar/id/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Configurações - Enviar conteúdo para GLPI"
  }
}